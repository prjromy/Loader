@model Loader.Models.Menu
@{
    var test = Model;
    var menuTypeClass = "background-color:#f9a825 !important";
    if (Model.IsGroup == false)
    {
        menuTypeClass = "background-color:#039be5 !important";
    }

    if (Model.IsContextMenu == true)
    {
        menuTypeClass = "background-color:#546e7a !important";
    }
}


<div class="small-box bg-aqua" style="@menuTypeClass">
    <span class="deleteNode" id="@Model.MenuId" style="right:0px;position:absolute;cursor:pointer;"> <i class="glyphicon glyphicon-remove"></i></span>
    <div class="inner" menu-caption="@Model.MenuCaption">
        <p id="menuCaption" data-toggle="tooltip" data-placement="top" title="@Model.MenuCaption" style="cursor:pointer;height:20px;"> @Model.MenuCaption</p>
        @if (Model.IsGroup == false)
        {
        <p id="menuCaption" data-toggle="tooltip" data-placement="top" title="@Model.Controler / @Model.Acton" style="cursor:pointer;height:20px;"> @Model.Controler / @Model.Acton </p>
        }
        else
        {
            <p id="menuCaption" data-toggle="tooltip" data-placement="top" title="@Model.Controler / @Model.Acton" style="cursor:pointer;height:20px;"> </p>}
        @*<span class="type" data-toggle="tooltip" data-placement="bottom" title="@Model.FinSys2.F2Desc" style="color:ghostwhite"><b style="max-height:15px;overflow:hidden;position:relative;">  @Html.DisplayFor(m => Model.FinSys2.F2Desc)</b></span>*@
    </div>
    <div class="icon"style="margin-top: -14px;">
        @if (Model.Image != null)
        {<span class="menuImage" id="@Model.MenuId"><img src="data:image;base64,@System.Convert.ToBase64String(Model.Image)" id="imgide" width="20" height="20" class="image" /></span> }
        else
        {
            <img class="menuImage" id="@Model.MenuId" src="~/Content/SBNJiAlSsx4AAAAASUVORK5CYII=.png" style="width:25px;height:25px;" />

        }
        @*<i class="fa fa-shopping-cart"></i>*@
    </div>
    <a class="small-box-footer">
        @*<input type="button" value="drill" class="btndrill" id="" />*@

        @if (Model.IsGroup == true)
        {
            <span class="btndrill" id="@Model.MenuId" data-toggle="tooltip" data-placement="top" title="Drill" style="cursor:pointer;"><i class="glyphicon glyphicon-screenshot drill"></i></span>
        }
        else
        {
            <span class="btndrill editList" id="@Model.MenuId" data-toggle="tooltip" data-placement="top" title="Edit" style="cursor:pointer;"><i id="@Model.MenuId" class="glyphicon glyphicon-list-alt editList "></i></span>
        }



        @*<span id="btndetails"><i class="glyphicon glyphicon-list-alt details" fid="@Model.Fid" did="@Model.Fname" pid="@Model.Pid"></i></span>*@
    </a>
</div>
<style>
    .deleteNode:hover {
        background-color: indianred;
    }

    .inner > #menuCaption {
        white-space: nowrap;
        width: 8em;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $(document).tooltip();
    });
</script>