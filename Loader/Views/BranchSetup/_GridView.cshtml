@model Loader.Models.Company
@{
    var test = Model;
    var BranchSetupTypeClass = "bg-red";
    Loader.Service.BranchSetupService _brnchService = new Loader.Service.BranchSetupService();
}


<div class="small-box bg-aqua @BranchSetupTypeClass">
    <span class="deleteNode" id="@Model.CompanyId" style="right:0px;position:absolute;cursor:pointer;"> <i class="glyphicon glyphicon-remove"></i></span>
    <div id="@Model.CompanyId" class="icon BranchSetupImage" style="top: -31px;">
        <img class="BranchSetupImage" id="@Model.CompanyId" src="~/Content/SBNJiAlSsx4AAAAASUVORK5CYII=.png" style="width:25px;height:25px;"/>
    </div>
    <div class="inner" BranchSetup-caption="@Model.BranchName">
        <p id="BranchSetupCaption" data-toggle="tooltip" data-placement="top" title="@Model.BranchName" style="cursor:pointer;"> @Model.BranchName</p>
       
        @*<span class="type" data-toggle="tooltip" data-placement="bottom" title="@Model.FinSys2.F2Desc" style="color:ghostwhite"><b style="max-height:15px;overflow:hidden;position:relative;">  @Html.DisplayFor(m => Model.FinSys2.F2Desc)</b></span>*@
    </div>

    <a class="small-box-footer">

        @if (Model.IsGroup || Model.IsBranch == true)
        {
            <span class="btndrill" id="@Model.CompanyId" data-toggle="tooltip" data-placement="top" title="Drill" style="cursor:pointer;"><i class="glyphicon glyphicon-screenshot drill"></i></span>
        }
        
        @if (Model.IsGroup == false || Model.IsBranch == false)
        {
            <span class="btndrill editList" id="@Model.CompanyId" data-toggle="tooltip" data-placement="top" title="Edit" style="cursor:pointer;"><i id="@Model.CompanyId" class="glyphicon glyphicon-list-alt editList "></i></span>
        }


        @*<span id="btndetails"><i class="glyphicon glyphicon-list-alt details" fid="@Model.Fid" did="@Model.Fname" pid="@Model.Pid"></i></span>*@
    </a>
</div>
<style>
    .deleteNode:hover {
        background-color: indianred;
    }

    .inner > #BranchSetupCaption {
        white-space: nowrap;
        width: 8em;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
<script type="text/javascript">
$(document).ready(function(){
    $(document).tooltip();
});
</script>

