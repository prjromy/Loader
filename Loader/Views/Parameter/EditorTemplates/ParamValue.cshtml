@model Loader.Models.ParamValue

@{
    var test = Model;
    // IEnumerable<SelectListItem> datatypeList = ViewBag.DataTypeList.AsEnumerable();
    var datatypeList = (SelectList)ViewBag.DataTypeList;

    var dtypeList = datatypeList.Select(x =>
                          new SelectListItem()
                          {
                              Text = x.Text,
                              Value = x.Value
                          });

}


    @Html.HiddenFor(x => x.PId)

    @Html.LabelFor(x => x.dataType.DType, htmlAttributes: new { @class = "control-label col-md-3" })
    <div class="col-md-3">
        @Html.DropDownListFor(m => m.DTId, dtypeList, new { @class = "form-control"  })

        @Html.ValidationMessageFor(model => model.DTId, "", new { @class = "text-danger" })
    </div>

    @Html.LabelFor(model => model.PDescription, htmlAttributes: new { @class = "control-label col-md-3" })
    <div class="col-md-3">
        @Html.TextBoxFor(model => model.PDescription,  new { @class = "is-group form-control", @style = "width:100%;"  })
        @Html.ValidationMessageFor(model => model.PDescription, "", new { @class = "text-danger" })
    </div>
<div class="form-group col-md-12">
  
</div>
<div class="form-group col-md-12 param-script">
    <br/>
    @if (Model.paramScript != null)
    {
        if (Model.paramScript.PId != 0)
        {
        @Html.EditorFor(x => x.paramScript)
        }
    }


</div>


