@model ChannakyaCustomeDatePicker.Models.CalendarRangeModel
@using ChannakyaCustomeDatePicker.Service;
@{
    ViewBag.Title = "DatePickerIndex";
    Layout = null;

}
<div class="clearfix"></div>
<div class="row">
    <!-- End Column -->
    <div id="calendar" class="col-sm-8 col-md-12 animated animated-sm bounceInUp">
        <div class="panel panel-default1">
            <div class="panel-body">
                <div class="calendar fc fc-ltr">
                    <table class="fc-header" style="width:100%">
                        <tbody>
                            <tr>
                                <td class="fc-header-left">
                                    <div class="btn-group">
                                        <button type="button" class="fc-button-prev fc-corner-left btn btn-default btn-ch fc-button-prevRange">
                                            <i class="fa fa-chevron-left"></i>
                                        </button>

                                    </div>
                                </td>
                                <td class="fc-header-center">
                                    <div class="btn-group">
                                        <span class="fc-header-title">

                                            @Html.DropDownList("Years", Model.FromRange.YearList, null, new { @class = "form-control form-controll yearMonthFrom" })
                                        </span>
                                        <span class="fc-header-title">
                                            @Html.DropDownList("Months", Model.FromRange.MonthList, null, new { @class = "form-control form-controll yearMonthFrom" })
                                        </span>

                                    </div>
                                </td>
                                <td class="fc-header-left">
                                    <div class="btn-group">

                                        <button type="button" class="btn btn-default btn-ch fc-button-next fc-button-nextRange">
                                            <i class="fa fa-chevron-right"></i>
                                        </button>
                                    </div>
                                </td>
                                <td class="fc-header-left">
                                    <div class="btn-group">
                                        <button type="button" class="fc-button-prev fc-corner-left btn btn-default btn-ch fc-button-prevRange1">
                                            <i class="fa fa-chevron-left"></i>
                                        </button>

                                    </div>
                                </td>
                                <td class="fc-header-center">
                                    <div class="btn-group">
                                        <span class="fc-header-title">
                                            @Html.DropDownList("YearTo", Model.ToRange.YearList, null, new { @class = "form-control form-controll yearMonthTo" })
                                        </span>
                                        <span class="fc-header-title">
                                            @Html.DropDownList("MonthTo", Model.ToRange.MonthList, null, new { @class = "form-control form-controll yearMonthTo" })
                                        </span>

                                    </div>
                                </td>


                                <td class="fc-header-left">
                                    <div class="btn-group">

                                        <button type="button" class="btn btn-default btn-ch fc-button-next fc-button-nextRange1">
                                            <i class="fa fa-chevron-right"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-md-4">
                            <span class="fc-header-title">
                                @if (Model.ToRange.Calendar.DateType == eDateType.DateTypeAD)
                                {
                                    @Html.TextBox("FromDateAD", Model.FromDate, new { @class = "form-controll fromDateAd date" })
                                    @Html.TextBox("FromDateBS", Model.FromDateBS, new { @class = "form-controll fromDateBs date hidden" })
                                }
                                else
                                {
                                    @Html.TextBox("FromDateBS", Model.FromDateBS, new { @class = "form-controll fromDateBs date" })
                                    @Html.TextBox("FromDateAD", Model.FromDate, new { @class = "form-controll fromDateAd hidden date" })
                                }
                                @Html.TextBox("EnglishDateFrom", Model.EnglishDateFrom, new { @class = "hidden" })
                                @Html.TextBoxFor(x=>x.MinDate, new { @class = "hidden" })
                            </span>
                        </div>
                        <div class="col-md-4">
                            <span class="fc-header-title fromRange">
                                @if (Model.ToRange.Calendar.DateType == eDateType.DateTypeAD)
                                {
                                    @Html.TextBox("ToDateAD", Model.ToDate, new { @class = "form-controll toDateAd todate" })
                                    @Html.TextBox("ToDateBS", Model.ToDateBS, new { @class = "form-controll toDateBs hidden todate" })
                                }
                                else
                                {
                                    @Html.TextBox("ToDateBS", Model.ToDateBS, new { @class = "form-controll toDateBs todate" })
                                    @Html.TextBox("ToDateAD", Model.ToDate, new { @class = "form-controll toDateAd hidden todate" })
                                }
                                @Html.TextBox("EnglishDateTo", Model.EnglishDateTo, new { @class = "hidden" })
                                @Html.TextBoxFor(x => x.Maxdate, new { @class = "hidden" })
                            </span>
                        </div>
                        <div class="col-md-4">

                            <button type="button" class="btn apply btn-default btn-ch Apply">
                                Apply
                            </button>
                            <button type="button" class="btn btn-default btn-ch Cancel">
                                Cancel
                            </button>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div id="dpCalDetails" class="dpCalDetailsRange">
                                @Html.Partial("_DatePickerDetailsRange", Model.FromRange.Calendar)
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div id="dpCalDetails" class="dpCalDetailsRange1">
                                @Html.Partial("_DatePickerDetailsRange1", Model.ToRange.Calendar)
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


